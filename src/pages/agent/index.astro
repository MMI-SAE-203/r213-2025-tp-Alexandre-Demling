---
// src/pages/agent/index.astro
import Layout from "../../layouts/Base.astro";
import { getAgent } from "../../backend.mjs";

const agents = await getAgent();
---

<Layout title="Agents">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Nos Agents</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                agents?.map((agent) => (
                    <a
                        href={`/agent/${agent.id}`}
                        class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow"
                    >
                        <h2 class="text-xl font-semibold">
                            {agent.nom} {agent.prenom}
                        </h2>
                        <p class="text-gray-600 mt-2">{agent.email}</p>
                    </a>
                ))
            }
        </div>
    </main>
</Layout>